# Application
APP_NAME=AI Agentic Deals API
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=True

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=12345678
POSTGRES_DB=deals
POSTGRES_HOST=deals_postgres
POSTGRES_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password
REDIS_SSL=False

# JWT
JWT_SECRET=your-jwt-secret-for-development
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=HS256

# Market APIs
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key
AMAZON_PARTNER_TAG=your-amazon-partner-tag
AMAZON_COUNTRY=US

WALMART_CLIENT_ID=your-walmart-client-id
WALMART_CLIENT_SECRET=your-walmart-client-secret

# ScraperAPI Configuration
SCRAPER_API_KEY=your_scraper_api_key
SCRAPER_API_BASE_URL=http://api.scraperapi.com
SCRAPER_API_CONCURRENT_LIMIT=25
SCRAPER_API_REQUESTS_PER_SECOND=3
SCRAPER_API_MONTHLY_LIMIT=200000
SCRAPER_API_TIMEOUT=70
SCRAPER_API_CACHE_TTL=1800
SCRAPER_API_BACKGROUND_CACHE_TTL=7200

# AI Services
DEEPSEEK_API_KEY=your-deepseek-api-key
OPENAI_API_KEY=your-openai-api-key

# Firebase Cloud Messaging
FCM_API_KEY=your-fcm-api-key
FCM_ENDPOINT=https://fcm.googleapis.com/fcm/send
FCM_PROJECT_ID=your-project-id
FCM_CREDENTIALS_PATH=path/to/firebase-credentials.json
FCM_APP_PACKAGE_NAME=com.yourdomain.app
FCM_NOTIFICATION_ICON=notification_icon
FCM_NOTIFICATION_COLOR=#4A90E2
FCM_NOTIFICATION_CLICK_ACTION=OPEN_APP
FCM_NOTIFICATION_CHANNEL_ID=deals_notifications
FCM_NOTIFICATION_PRIORITY=high
FCM_NOTIFICATION_TTL=86400
FCM_BATCH_SIZE=500
FCM_RETRY_COUNT=3
FCM_RETRY_DELAY=1000

# Email
EMAIL_SERVER_HOST=localhost
EMAIL_SERVER_PORT=1025
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=
EMAIL_FROM=noreply@example.com

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=True
HEALTH_CHECK_ENABLED=True
METRICS_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_PER_SECOND=5
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST_MULTIPLIER=2.0

# Cache TTLs (in seconds)
MARKET_CACHE_TTL=3600
PRODUCT_CACHE_TTL=1800
TOKEN_CACHE_TTL=3000
USER_CACHE_TTL=300
SESSION_CACHE_TTL=1800 