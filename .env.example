# AI Agentic Deals System - Environment Variables Template
# This file serves as a template for all environment-specific configuration files
# Copy this file to create .env.development, .env.production, or .env.test

# Application Configuration
# ---------------------------------------------------------------------------------------
PROJECT_NAME="AI Agentic Deals System"  # Name of the application
VERSION="1.0.0"                         # Application version
DEBUG=false                             # Set to true for development environment
ENVIRONMENT="development"               # Options: development, production, test

# Security Configuration
# ---------------------------------------------------------------------------------------
SECRET_KEY=""                           # Application secret key for general encryption
# Authentication (shared with frontend)
NEXTAUTH_SECRET=""                      # Secret for NextAuth authentication
JWT_SECRET=""                           # Secret for JWT token generation
JWT_ALGORITHM="HS256"                   # Algorithm used for JWT
ACCESS_TOKEN_EXPIRE_MINUTES="30"        # Access token expiration time in minutes
REFRESH_TOKEN_EXPIRE_DAYS="7"           # Refresh token expiration time in days

# Database Configuration
# ---------------------------------------------------------------------------------------
POSTGRES_USER=""                        # PostgreSQL username
POSTGRES_PASSWORD=""                    # PostgreSQL password
POSTGRES_DB=""                          # PostgreSQL database name
POSTGRES_HOST=""                        # PostgreSQL host (use "localhost" for test, container name for dev/prod)
POSTGRES_PORT="5432"                    # PostgreSQL port
# Database Connection Pool Settings
DB_POOL_SIZE=5                          # Maximum number of connections in the pool
DB_POOL_OVERFLOW=10                     # Maximum number of connections that can be created beyond pool_size
DB_POOL_TIMEOUT=30                      # Seconds to wait before giving up on getting a connection
DB_POOL_RECYCLE=1800                    # Seconds after which a connection is recycled
DB_ECHO=false                           # Set to true to log all SQL queries
DB_STATEMENT_TIMEOUT=30                 # Maximum time in seconds for a statement to complete
DB_IDLE_TIMEOUT=300                     # Maximum time in seconds a connection can be idle in the pool
DB_MAX_OVERFLOW=10                      # Maximum number of connections that can be created beyond pool_size
DB_MAX_RETRIES=3                        # Maximum number of retries for database operations
DB_RETRY_DELAY=1                        # Delay between retries in seconds

# Redis Configuration
# ---------------------------------------------------------------------------------------
REDIS_URL=""                            # Redis connection URL
REDIS_HOST=""                           # Redis host (use "localhost" for test, container name for dev/prod)
REDIS_PORT="6379"                       # Redis port
REDIS_DB="0"                            # Redis database number
REDIS_PASSWORD=""                       # Redis password
REDIS_SSL="false"                       # Set to true for SSL connection (typically in production)
REDIS_POOL_SIZE="10"                    # Maximum number of connections in the Redis pool
REDIS_TIMEOUT="5"                       # Redis connection timeout in seconds

# Token System Configuration
# ---------------------------------------------------------------------------------------
ETH_NETWORK_RPC=""                      # Ethereum network RPC URL
SOL_NETWORK_RPC=""                      # Solana network RPC URL
SOL_NETWORK=""                          # Solana network (mainnet, devnet, testnet)
TOKEN_CONTRACT_ADDRESS=""               # Token contract address
TOKEN_REQUIRED_BALANCE=""               # Minimum token balance required
TOKEN_SEARCH_COST=""                    # Cost per search in tokens
TOKEN_DECIMALS="9"                      # Number of decimal places for token
COMMITMENT_LEVEL="confirmed"            # Solana commitment level

# Market APIs Configuration
# ---------------------------------------------------------------------------------------
AMAZON_ACCESS_KEY=""                    # Amazon API access key
AMAZON_SECRET_KEY=""                    # Amazon API secret key
AMAZON_PARTNER_TAG=""                   # Amazon partner tag
AMAZON_COUNTRY="US"                     # Amazon country code

WALMART_CLIENT_ID=""                    # Walmart API client ID
WALMART_CLIENT_SECRET=""                # Walmart API client secret

# AI Services Configuration
# ---------------------------------------------------------------------------------------
DEEPSEEK_API_KEY=""                     # DeepSeek API key
OPENAI_API_KEY=""                       # OpenAI API key
GOOGLE_API_KEY=""                       # Google API key

# CORS Configuration
# ---------------------------------------------------------------------------------------
CORS_ORIGINS="[]"                       # List of allowed origins for CORS
CORS_CREDENTIALS=true                   # Allow credentials in CORS requests
CORS_METHODS="[\"*\"]"                  # List of allowed methods for CORS
CORS_HEADERS="[\"*\"]"                  # List of allowed headers for CORS

# Rate Limiting Configuration
# ---------------------------------------------------------------------------------------
RATE_LIMIT_PER_SECOND="10"              # Maximum requests per second
RATE_LIMIT_PER_MINUTE="200"             # Maximum requests per minute

# Market Rate Limiting Configuration
# ---------------------------------------------------------------------------------------
MARKET_DEFAULT_RATE_LIMIT="100"         # Default rate limit for market APIs
AMAZON_RATE_LIMIT="100"                 # Rate limit for Amazon API
WALMART_RATE_LIMIT="100"                # Rate limit for Walmart API
EBAY_RATE_LIMIT="100"                   # Rate limit for eBay API

# Cache TTLs Configuration (in seconds)
# ---------------------------------------------------------------------------------------
MARKET_CACHE_TTL="3600"                 # Market data cache time-to-live
PRODUCT_CACHE_TTL="1800"                # Product data cache time-to-live
TOKEN_CACHE_TTL="3000"                  # Token data cache time-to-live

# Scraper API Configuration
# ---------------------------------------------------------------------------------------
SCRAPER_API_KEY=""                      # ScraperAPI key
SCRAPER_API_BASE_URL=""                 # ScraperAPI base URL
SCRAPER_API_CONCURRENT_LIMIT=25         # Maximum concurrent requests to ScraperAPI
SCRAPER_API_REQUESTS_PER_SECOND=3       # Maximum requests per second to ScraperAPI
SCRAPER_API_MONTHLY_LIMIT=200000        # Monthly request limit for ScraperAPI
SCRAPER_API_TIMEOUT=70                  # Timeout for ScraperAPI requests in seconds
SCRAPER_API_CACHE_TTL=1800              # Cache time-to-live for ScraperAPI results
SCRAPER_API_BACKGROUND_CACHE_TTL=7200   # Background cache time-to-live for ScraperAPI results

# Monitoring Configuration
# ---------------------------------------------------------------------------------------
SENTRY_DSN=""                           # Sentry DSN for error tracking
PROMETHEUS_ENABLED="false"              # Enable Prometheus metrics
HEALTH_CHECK_ENABLED="true"             # Enable health check endpoint

# Logging Configuration
# ---------------------------------------------------------------------------------------
LOG_LEVEL="INFO"                        # Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_FORMAT="json"                       # Log format (json, text)

# Email Configuration (AWS SES)
# ---------------------------------------------------------------------------------------
EMAIL_BACKEND="ses"                     # Email backend (ses, smtp)
EMAIL_HOST=""                           # Email host
EMAIL_PORT="587"                        # Email port
EMAIL_USE_TLS="true"                    # Use TLS for email
EMAIL_HOST_USER=""                      # Email host username
EMAIL_HOST_PASSWORD=""                  # Email host password
DEFAULT_FROM_EMAIL=""                   # Default from email address

# AWS Configuration
# ---------------------------------------------------------------------------------------
# Only needed for production environment
S3_BUCKET_NAME=""                       # S3 bucket name
S3_REGION=""                            # S3 region
S3_ACCESS_KEY=""                        # S3 access key
S3_SECRET_KEY=""                        # S3 secret key
CLOUDFRONT_DOMAIN=""                    # CloudFront domain
CLOUDFRONT_REGION=""                    # CloudFront region
CLOUDWATCH_LOG_GROUP=""                 # CloudWatch log group
CLOUDWATCH_REGION=""                    # CloudWatch region
API_GATEWAY_URL=""                      # API Gateway URL
API_GATEWAY_STAGE=""                    # API Gateway stage
API_GATEWAY_ID=""                       # API Gateway ID
WS_GATEWAY_URL=""                       # WebSocket Gateway URL 