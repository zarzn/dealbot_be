[MASTER]

[DESIGN]
# Disable warning about first argument name in @declared_attr
bad-classmethod-argument=no

[TYPECHECK]
# Disable warning about __name__ access on class
no-member=no

# Ignore no-self-argument for Pydantic validators
[DESIGN]
no-self-argument=no
disable=
    not-callable,
    no-member,
    import-error

[IMPORTS]
ignored-modules=redis.asyncio
[MASTER]
disable=
    not-callable,
    no-member
load-plugins=pylint_pydantic

[MESSAGES CONTROL]
disable=
    no-self-argument,  # Disable for Pydantic validators
    no-member,  # Disable for Pydantic model fields
    not-callable,  # Disable for Pydantic model constructors
    assignment-from-no-return,  # Disable for Pydantic validators
    unexpected-keyword-arg,  # Disable for Pydantic model constructors
    too-few-public-methods,  # Disable for Pydantic models
    too-many-arguments,  # Disable for Pydantic model constructors
    invalid-name,  # Disable for Pydantic model field names
    protected-access,  # Disable for Pydantic model internals
    unused-argument,  # Disable for Pydantic validators
    missing-class-docstring,  # Disable for Pydantic models
    missing-function-docstring  # Disable for Pydantic validators

[FORMAT]
max-line-length=120

[DESIGN]
max-args=10
max-locals=25
max-statements=50
max-branches=20
max-public-methods=30
max-attributes=20

[PYDANTIC]
# Enable Pydantic v2 specific checks
pydantic-v2=true
